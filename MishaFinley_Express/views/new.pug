                br
                label="Model:"
                input(name="model", type="text")
                br
                label="Price:"
                input(name="price", type="text")
                br
                label="ImageUrl:"
                input(name="imageUrl", type="text")
                br
                input(type="submit")
            br
            form(id="groupset", action="/create/groupset")
